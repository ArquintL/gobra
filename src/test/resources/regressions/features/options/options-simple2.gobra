package pkg

func test1(v int) {
  assert seq(none[int]) == seq[int] { }
  assert seq(some(v)) == seq[int] { v }
}

requires option(o) == 2
func test2(ghost o option[int]) {
  assert seq(o) == seq[int] { 2 }
}

ensures len(seq(o)) <= 1
func test3(ghost o option[int]) {
  assert o != none[int] ==> seq(o) == seq[int] { option(o) }
}

requires v in seq(o)
ensures o == some(v)
func test4(ghost o option[int], v int) {
  assert seq(o) == seq[int] { option(o) }
}

requires len(seq(o)) == 0
ensures o == none[int]
func test5(ghost o option[int]) {
}

requires v # (seq(l) ++ seq(r)) == 2
ensures l == some(v)
ensures r == some(v)
func test6(ghost l option[int], ghost r option[int], v int) {
  test3(l)
  test3(r)
  test4(l, v)
  test4(r, v)
}

requires v # seq(o) == 2
ensures false
func test7(ghost o option[int], v int) {
  test3(o)
}
