package pkg

func test1() {
  ghost var o1 option[int]
  ghost var o2 option[option[option[bool]]]
}

func test2() {
  ghost var opt option[bool]
  opt = none[bool]
}

func test3() {
  ghost var opt option[int]
  opt = some(34)
}

func test4(b bool) {
  ghost var opt option[bool]
  opt = some(false || b)
  assert option(opt) == b
}

requires option(opt) == false
func test5(ghost opt option[bool]) {
  assert opt == some(false)
  assert opt != none[bool]
}

requires option(none[int]) == n
ensures false
func test6(n int) {
  assert none[int] == some(n)
}

func test7(val int) {
  assert option(some(val)) == val
}

requires o != none[int]
func test8(ghost o option[int]) {
  assert some(option(o)) == o
}

ensures opt != none[int]
ensures option(opt) == 23
func test9() (ghost opt option[int]) {
  opt = some(23)
}

func test10() {
  assert option(none[int]) == option(none[int])
}
